<Window x:Class="TeamNoter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamNoter"
        mc:Ignorable="d"
        Title="TeamNoter" Height="810" Width="1440" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/Images/Icons/NoterLogo (16x16).ico" UseLayoutRounding="True">
    <Window.Background>
        <ImageBrush ImageSource="/Images/TeamNoter Login BG.png"/>
    </Window.Background>
    <Border BorderBrush="Black" Background="White" Margin="497,106,497,106" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="115"/>
                <!--Title Bar-->
                <RowDefinition Height="*"/>
                <!--Content Area-->

            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="TeamNoter" Style="{StaticResource Leixo}" Margin="99,46,99,35" FontSize="24"/>
            <Label Grid.Row="0" Content="Track &amp; Manage Your Team's Tasks" HorizontalAlignment="Left" Margin="99,68,0,0" VerticalAlignment="Top" Foreground="#FF5D5D5D" Height="26" Width="193"/>
            <Image Grid.Row="0" Source="/Images/Icons/NoterLogo (50x50).png" HorizontalAlignment="Left" Height="50" Margin="44,46,0,0" VerticalAlignment="Top" Width="50"/>
            <Label Content="Welcome" HorizontalAlignment="Left" Margin="44,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="22"/>
            <Label Grid.Row="1" Content="Connect to a TeamNoter-compatible database or create one" HorizontalAlignment="Left" Margin="44,40,0,0" VerticalAlignment="Top" Foreground="#FF5D5D5D" Height="26" Width="366"/>
            <Label Content="If you've got a compatible database:" HorizontalAlignment="Left" Margin="44,87,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Center"  Grid.Row="1" TextWrapping="Wrap" Text="Database URI" VerticalAlignment="Top" Width="340" Height="33" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FFA2A2A2" Margin="0,113,0,0"/>
            <TextBox HorizontalAlignment="Center"  Grid.Row="1" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="340" Height="34" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FFA2A2A2" Margin="0,151,0,0"/>
            <TextBox HorizontalAlignment="Center"  Grid.Row="1" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="340" Height="34" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FFA2A2A2" Margin="0,190,0,0"/>
            <Label Content="Create a MySQL database that works with TeamNoter" HorizontalAlignment="Left" Margin="44,308,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <Button Content="PROCEED" HorizontalAlignment="Center" Margin="0,234,0,0" Grid.Row="1" VerticalAlignment="Top" Width="340" Height="29" Background="#FFF3C86A" BorderThickness="0,0,0,0" Foreground="White" FontWeight="Bold"/>
            <Label Content="———————————— OR ————————————" HorizontalAlignment="Center" Margin="0,277,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="#FF9A9A9A"/>
            <Button Content="GET STARTED" HorizontalAlignment="Center" Margin="0,334,0,0" Grid.Row="1" VerticalAlignment="Top" Width="340" Height="29" Background="#FFF3C86A" BorderThickness="0,0,0,0" Foreground="White" FontWeight="Bold"/>

        </Grid>
    </Border>
</Window>
