<Window x:Class="TeamNoter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamNoter"
        mc:Ignorable="d"
        xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        Title="TeamNoter" Height="802" Width="1440" WindowStartupLocation="CenterScreen" Icon="/Images/Icons/NoterIcon.ico" UseLayoutRounding="True" MinWidth="960" MinHeight="540" WindowState="Maximized"
        >
    <Window.Background>
        <ImageBrush ImageSource="/Images/TeamNoterDarkBG.png"/>
    </Window.Background>
    <Border x:Name="mainBorder" BorderBrush="Black" Background="#FF333131" CornerRadius="30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="659" MinWidth="460" MinHeight="650" MaxHeight="700" MaxWidth="460">
        <StackPanel>
            <StackPanel x:Name="titleStack" Orientation="Horizontal" Margin="50,40,0,0">
                <Image x:Name="noterLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/Icons/NoterLogo.svg}" Height="50" Width="50" MouseLeftButtonDown="noterLogo_MouseLeftButtonDown"/>
                <StackPanel x:Name="titleTextStack" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0">
                    <Label x:Name="mainTitle" Content="TeamNoter" Style="{StaticResource Leixo}" FontSize="20" VerticalContentAlignment="Bottom" Padding="5,0,5,0" Foreground="White" MouseDoubleClick="mainTitle_MouseDoubleClick"/>
                    <Label x:Name="subTitle" Content="Track &amp; Manage Your Team's Work" Padding="5,0,5,0" Foreground="White"/>
                </StackPanel>
            </StackPanel>
            <Grid x:Name="contentGrid" Width="460">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24*"/>
                    <ColumnDefinition Width="175*"/>
                    <ColumnDefinition Width="24*"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="contentStack" Grid.Column="1">
                    <Label x:Name="welcomeLabel" Content="Welcome" FontSize="18" Padding="0,5,5,0" Margin="6,15,0,0" FontWeight="Bold" Foreground="White"/>
                    <Label x:Name="welcomeSubtitle" Content="Connect to a TeamNoter-compatible database." FontSize="11" Foreground="White" Padding="1,0,0,0" Margin="6,0,0,15" FontStyle="Italic"/>
                    <Label x:Name="loginLabel" Content="Database Details" Padding="0,5,5,5" Margin="6,0,0,0" Foreground="White"/>
                    <TextBox x:Name="serverBox"  Grid.Row="1" TextWrapping="Wrap" Text="Server"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" HorizontalAlignment="Center" BorderBrush="#FF777777" Background="#FF333131" CaretBrush="White" GotFocus="serverBox_Placeholder" LostFocus="serverBox_Placeholder" KeyDown="box_KeyPress" TextChanged="serverBox_TextChanged"/>
                    <TextBox x:Name="portBox"  Grid.Row="1" TextWrapping="Wrap" Text="Port"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" HorizontalAlignment="Center" BorderBrush="#FF777777" Background="#FF333131" CaretBrush="White" Margin="0,10,0,0" GotFocus="portBox_Placeholder" LostFocus="portBox_Placeholder" KeyDown="box_KeyPress"/>
                    <TextBox x:Name="dbUsernameBox"  Grid.Row="1" TextWrapping="Wrap" Text="Username / UID"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" HorizontalAlignment="Center" BorderBrush="#FF777777" Background="#FF333131" CaretBrush="White" Margin="0,10,0,0" GotFocus="dbUsernameBox_Placeholder" LostFocus="dbUsernameBox_Placeholder" KeyDown="box_KeyPress"/>
                    <Label x:Name="dbPasswordLabel" Content="Database Password:" Padding="7,0,0,2" Foreground="#FF777777" FontStyle="Italic" Margin="0,5,0,0"/>
                    <PasswordBox x:Name="dbPasswordPassbox" Width="350" Background="#FF333131" BorderBrush="#FF777777" CaretBrush="White" Foreground="#FF777777" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" KeyDown="box_KeyPress"/>
                    <StackPanel Orientation="Horizontal" Margin="5,11,0,0">
                        <Label x:Name="sslModeLabel" Content="SSL Mode:" Padding="7,0,0,2" Foreground="#FF777777" FontStyle="Italic" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <ComboBox x:Name="sslCB" Width="277" SelectedIndex="0" SelectionChanged="sslCB_SelectionChanged">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Required"/>
                            <ComboBoxItem Content="Verify CA"/>
                        </ComboBox>
                    </StackPanel>
                    <TextBox x:Name="caPathBox"  Grid.Row="1" TextWrapping="Wrap" Text="ca.pem Filepath (Example: D:\ca.pem)"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" HorizontalAlignment="Center" BorderBrush="#FF777777" Background="#FF333131" CaretBrush="White" Margin="0,10,0,0" GotFocus="caPathBox_Placeholder" LostFocus="caPathBox_Placeholder" Visibility="Collapsed" KeyDown="box_KeyPress"/>
                    <Label x:Name="borderLabel" Content="—————————————————————————————" Padding="0,8,0,8" Foreground="#FF777777" HorizontalContentAlignment="Center"/>
                    <Label x:Name="accountdetailsLabel" Content="TeamNoter Account Details" Padding="0,0,5,5" Foreground="White" Margin="6,0,0,0"/>
                    <TextBox x:Name="emailBox"  Grid.Row="1" TextWrapping="Wrap" Text="Email"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" HorizontalAlignment="Center" Background="#FF333131" Foreground="#FF777777" BorderBrush="#FF777777" CaretBrush="White" Margin="0,1,0,0" GotFocus="emailBox_Placeholder" LostFocus="emailBox_Placeholder" KeyDown="box_KeyPress"/>
                    <Label x:Name="accPasswordLabel" Content="Account Password:" Padding="7,0,0,2" Foreground="#FF777777" FontStyle="Italic" Margin="0,6,0,0"/>
                    <PasswordBox x:Name="userpassPassbox" Width="350" Background="#FF333131" BorderBrush="#FF777777" CaretBrush="White" Foreground="#FF777777" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" KeyDown="box_KeyPress"/>
                    <Label x:Name="borderLabel_Copy" Content="—————————————————————————————" Padding="0,8,0,8" Foreground="#FF777777" HorizontalContentAlignment="Center"/>
                    <Button x:Name="proceedBtn" Content="Proceed" Width="350" Height="30" Background="#FFF7BB64" BorderThickness="0,0,0,0" Foreground="Black" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,6,0,0" Click="proceedBtn_Click" IsEnabled="False"/>
                    <StackPanel Margin="5,0,5,0" Orientation="Horizontal">
                        <CheckBox x:Name="remCheck" Content="Remember my login" Style="{DynamicResource NoterCheckbox}" Foreground="#FFDBDAD7" HorizontalContentAlignment="Stretch" Checked="CheckBox_Checked" Unchecked="remCheck_Unchecked" VerticalAlignment="Center" Margin="0,0,114,0"/>
                        <Label x:Name="accountdetailsLabel_Copy" Content="Click here to view guide" Padding="0,5,5,5" Foreground="#FFF7BB64" FontSize="10" FontStyle="Italic" MouseDown="accountdetailsLabel_Copy_MouseDown"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
