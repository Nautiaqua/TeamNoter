<UserControl x:Class="TeamNoter.Windows.UserControls.databaseContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="mainScroller" HorizontalContentAlignment="Stretch">
        <Grid x:Name="mainGrid" Background="#FF333131" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="mainStack" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Label x:Name="titleLabel" Content="Database Information" FontSize="24" Padding="0,0,0,0" Margin="20,15,0,0" Foreground="White" FontWeight="Bold" Background="{x:Null}"/>
                <StackPanel x:Name="detailsStack" Margin="20,10,0,0">
                    <Label x:Name="databasenameLabel" Content="Database Name" Padding="3,0,10,3" FontSize="14" Foreground="White" Margin="0,10,0,0"/>
                    <TextBox x:Name="dbNameBox" TextWrapping="Wrap" Text="N/A"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" IsReadOnly="True" CaretBrush="White"/>
                </StackPanel>
                <StackPanel x:Name="statisticsStack" Margin="20,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Label x:Name="statisticsLabel" Content="Statistics" Padding="3,0,10,3" FontSize="14" Foreground="White"/>
                    <DockPanel x:Name="tasksCompletedDock" LastChildFill="False">
                        <TextBox x:Name="completedBox" DockPanel.Dock="Left" TextWrapping="Wrap" Text="N/A" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" IsReadOnly="True" CaretBrush="White" Width="100" Height="33" VerticalAlignment="Top"/>
                        <Label x:Name="completedLabel" DockPanel.Dock="Right" Content="Total Completed Tasks" Padding="10,0,0,0" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    </DockPanel>
                    <DockPanel x:Name="tasksIncompleteDock" LastChildFill="False" Margin="0,5,0,0">
                        <TextBox x:Name="incompleteBox" DockPanel.Dock="Left" TextWrapping="Wrap" Text="N/A" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" IsReadOnly="True" CaretBrush="White" Width="100" Height="33" VerticalAlignment="Top"/>
                        <Label x:Name="incompleteLabel" DockPanel.Dock="Right" Content="Total Incomplete Tasks" Padding="10,0,0,0" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    </DockPanel>
                    <DockPanel x:Name="tasksTotalDock" LastChildFill="False" Margin="0,5,0,0">
                        <TextBox x:Name="totalBox" DockPanel.Dock="Left" TextWrapping="Wrap" Text="N/A" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" IsReadOnly="True" CaretBrush="White" Width="100" Height="33" VerticalAlignment="Top"/>
                        <Label x:Name="totalLabel" DockPanel.Dock="Right" Content="Total Overall Tasks" Padding="10,0,0,0" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    </DockPanel>
                </StackPanel>
                <StackPanel x:Name="actionStack" Margin="20,10,0,0">
                    <Label x:Name="actionLabel" Content="Backup and Recovery" Padding="3,0,10,3" FontSize="14" Foreground="White"/>
                    <StackPanel x:Name="horizontalStack" Orientation="Horizontal">
                        <Button x:Name="exportBtnCSV" Content="Export into CSV" Width="150" Height="30" Background="#FFF7BB64" BorderThickness="0,0,0,0" Foreground="Black" FontWeight="Bold" Margin="0,0,20,0" Click="exportBtnCSV_Click"/>
                        <Button x:Name="importBtnCSV" Content="Import from CSV" Width="150" Height="30" Background="#FFF7BB64" BorderThickness="0,0,0,0" Foreground="Black" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel x:Name="horizontalStack2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="exportBtnSQL" Content="Export into SQL File" Width="150" Height="30" Background="#FFF7BB64" BorderThickness="0,0,0,0" Foreground="Black" FontWeight="Bold" Margin="0,0,20,0"/>
                        <Button x:Name="importBtnSQL" Content="Import from SQL File" Width="150" Height="30" Background="#FFF7BB64" BorderThickness="0,0,0,0" Foreground="Black" FontWeight="Bold"/>
                    </StackPanel>
                    <TextBox x:Name="filepathExportBox" TextWrapping="Wrap" Text="Filepath for exports"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" CaretBrush="White" Margin="0,10,0,0" LostFocus="filepathExportBox_Placeholder" GotFocus="filepathExportBox_Placeholder" TextChanged="filepathExportBox_TextChanged"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
