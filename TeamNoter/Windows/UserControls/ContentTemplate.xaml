<UserControl x:Class="TeamNoter.Windows.UserControls.ContentTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="mainScroller" HorizontalContentAlignment="Stretch">
        <Grid x:Name="mainGrid" Height="450" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border x:Name="background" Background="#FF333131"/>
            <StackPanel x:Name="mainStack" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Label x:Name="mainLabel" Content="Template" FontSize="24" Padding="0,0,0,0" Margin="25,25,0,0" Background="{x:Null}" Foreground="White" FontWeight="Bold"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
