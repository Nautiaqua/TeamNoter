<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/" x:Class="TeamNoter.Windows.UserControls.manageContent"
             Style="{DynamicResource windowStyle}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="mainScroller_Copy" HorizontalContentAlignment="Stretch">
        <StackPanel x:Name="mainStack">
            <Label x:Name="titleLabel" Content="Manage Users" FontSize="24" Padding="0,0,0,0" Margin="20,15,0,0" Foreground="White" FontWeight="Bold" Background="{x:Null}"/>
            <StackPanel x:Name="actionStack" Margin="20,10,0,0">
                <Label x:Name="actionLabel" Content="User Options:" Padding="3,0,10,3" FontSize="14" Foreground="White"/>
                <DockPanel LastChildFill="False">
                    <Button DockPanel.Dock="Right" x:Name="addBtn" Style="{StaticResource sideBtn}" Width="40" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Click="taskBtn_Click" Foreground="#FFFF2A2A" Height="40" Margin="0,0,25,0">
                        <Grid Width="39" Height="39">
                            <Image x:Name="taskLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/User_Add.svg}" Stretch="Uniform" Width="20" Height="20"/>
                        </Grid>
                    </Button>
                    <Button DockPanel.Dock="Right" x:Name="removeBtn" Style="{StaticResource sideBtn}" Width="40" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Click="taskBtn_Click" Foreground="#FFFF2A2A" Height="40" Margin="0,0,21,0">
                        <Grid Width="39" Height="39">
                            <Image x:Name="taskLogo1" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/Trash_Full.svg}" Stretch="Uniform" Width="20" Height="20"/>
                        </Grid>
                    </Button>
                    <TextBox x:Name="searchBox" TextWrapping="Wrap" Text="Search for users" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" CaretBrush="White" ToolTip="Searches for task titles" GotFocus="searchBox_Placeholder" LostFocus="searchBox_Placeholder" TextChanged="searchBox_TextChanged" Width="382" Height="30"/>
                </DockPanel>
            </StackPanel>
            <DataGrid Height="200" d:ItemsSource="{d:SampleData ItemCount=5}" ColumnWidth="*"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
