<UserControl x:Class="TeamNoter.Windows.UserControls.manageContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="mainScroller" HorizontalContentAlignment="Stretch">
        <Grid x:Name="mainGrid" Height="450" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border x:Name="background" Background="#FF333131"/>
            <StackPanel x:Name="mainStack" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Label x:Name="mainLabel" Content="User Management" FontSize="20" Padding="0,0,0,0" Margin="25,25,0,0" FontWeight="Bold"/>
                <DataGrid Height="311" ItemsSource="{x:Null}" AutoGenerateColumns="False" Width="733" Margin="25,20,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User ID" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Username" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Email" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Account Creation Date" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Tasks Completed" Binding="{Binding Name}" Width="100" />
                        <DataGridTextColumn Header="Tasks Assigned" Binding="{Binding Name}" />
                        <DataGridTextColumn Header="Account Type" Binding="{Binding Name}" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel x:Name="actionStack" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button x:Name="removeBtn" Content="Remove User" Background="#FFFBC753" BorderThickness="0,0,0,0" Foreground="Black" Height="25" Width="145" Margin="0,10,20,0"/>
                    <Button x:Name="addBtn" Content="Add User" Background="#FFFBC753" BorderThickness="0,0,0,0" Foreground="Black" Height="25" Width="145" Margin="0,10,1,0"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
