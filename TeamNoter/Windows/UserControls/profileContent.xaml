<UserControl x:Class="TeamNoter.Windows.UserControls.profileContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="mainScroller" HorizontalContentAlignment="Stretch">
        <Grid x:Name="mainGrid" Background="#FF333131">
            <StackPanel x:Name="mainStack" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Label x:Name="titleLabel" Content="Profile" FontSize="24" Padding="0,0,0,0" Margin="25,25,0,0" Foreground="White" FontWeight="Bold" Background="{x:Null}"/>
                <StackPanel x:Name="detailsStack" Margin="25,20,0,0">
                    <Label x:Name="usernameLabel" Content="Username" Padding="3,0,10,3" FontSize="16" Foreground="White"/>
                    <TextBox x:Name="usernameBox" TextWrapping="Wrap" Text="Username" VerticalContentAlignment="Center" Padding="10,0,10,0" Foreground="White" BorderBrush="#FFA7A7A7" Width="300" Height="30" IsReadOnly="True" Background="{x:Null}"/>
                    <Label x:Name="emailLabel" Content="Email" Padding="3,0,10,3" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    <TextBox x:Name="emailBox" TextWrapping="Wrap" Text="Email" Padding="10,0,10,0" Foreground="White" BorderBrush="#FFA7A7A7" Width="300" Height="30" VerticalContentAlignment="Center" IsReadOnly="True" Background="{x:Null}"/>
                </StackPanel>
                <Label x:Name="actionsLabel" Content="Profile Actions" Padding="3,0,0,3" FontSize="16" Margin="25,10,0,0" Foreground="White"/>
                <Button x:Name="changePassBtn" Content="Change Password" Background="#FFFBC753" BorderThickness="0,0,0,0" Foreground="Black" Height="30" Width="145" HorizontalAlignment="Left" Margin="25,0,0,0"/>
                <Button x:Name="changePassBtn_Copy" Content="Recover Password" Background="#FFFBC753" BorderThickness="0,0,0,0" Foreground="Black" Height="30" Width="145" Margin="25,10,0,0" HorizontalAlignment="Left" FontSize="14"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
