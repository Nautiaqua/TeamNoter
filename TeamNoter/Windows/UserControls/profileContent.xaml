<UserControl x:Class="TeamNoter.Windows.UserControls.profileContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="mainScroller" HorizontalContentAlignment="Stretch">
        <Grid x:Name="mainGrid" Height="450" Width="800" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border x:Name="background" Background="#FFECECEC"/>
            <StackPanel x:Name="mainStack" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Label x:Name="titleLabel" Content="Profile" FontSize="20" Padding="0,0,0,0" Margin="25,25,0,0"/>
                <Label x:Name="usernameLabel" Content="Username" Margin="25,20,0,0" Padding="3,0,0,3" FontSize="16"/>
                <TextBox x:Name="usernameBox" TextWrapping="Wrap" Text="Username" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="Black" BorderBrush="#FFA7A7A7" Width="300" Height="30" HorizontalAlignment="Left" Margin="25,0,0,0" IsReadOnly="True"/>
                <Label x:Name="emailLabel" Content="Email" Padding="3,0,0,3" Margin="25,10,0,0" FontSize="16"/>
                <TextBox x:Name="emailBox" TextWrapping="Wrap" Text="Email" Padding="10,0,0,0" Foreground="Black" BorderBrush="#FFA7A7A7" Width="300" Height="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0" IsReadOnly="True"/>
                <Label x:Name="tasksLabel" Content="Password" Padding="3,0,0,3" FontSize="16" Margin="25,10,0,0"/>
                <PasswordBox Width="300" Height="30" HorizontalAlignment="Left" Margin="25,0,0,0" Password="sdkngsdg" VerticalContentAlignment="Center" Padding="10,0,0,0"/>
                <Label x:Name="actionsLabel" Content="Profile Actions" Padding="3,0,0,3" FontSize="16" Margin="25,10,0,0"/>
                <Button x:Name="changePassBtn" Content="Change Password" Background="#FFFBC753" BorderThickness="0,0,0,0" Foreground="Black" Height="25" Width="145" HorizontalAlignment="Left" Margin="25,0,0,0"/>
                <Button x:Name="changePassBtn_Copy" Content="Recover Password" Background="#FFFBC753" BorderThickness="0,0,0,0" Foreground="Black" Height="25" Width="145" Margin="25,10,0,0" HorizontalAlignment="Left"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
