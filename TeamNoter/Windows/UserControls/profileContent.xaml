<UserControl x:Class="TeamNoter.Windows.UserControls.profileContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer x:Name="mainScroller" HorizontalContentAlignment="Stretch">
        <Grid x:Name="mainGrid" Background="#FF333131" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="mainStack" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Label x:Name="titleLabel" Content="Profile" FontSize="24" Padding="0,0,0,0" Margin="20,15,0,0" Foreground="White" FontWeight="Bold" Background="{x:Null}"/>
                <StackPanel x:Name="detailsStack" Margin="20,10,0,0">
                    <Label x:Name="usernameLabel" Content="Username" Padding="3,0,10,3" FontSize="14" Foreground="White"/>
                    <TextBox x:Name="usernameBox" TextWrapping="Wrap" Text="N/A"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" IsReadOnly="True" CaretBrush="White"/>
                    <Label x:Name="emailLabel" Content="Email" Padding="3,0,10,3" FontSize="14" Foreground="White" Margin="0,10,0,0"/>
                    <TextBox x:Name="databaseURI_Box_Copy" TextWrapping="Wrap" Text="N/A"  Width="350" Height="30" VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" IsReadOnly="True" CaretBrush="White"/>
                </StackPanel>
                <StackPanel x:Name="actionStack" Margin="20,10,0,0">
                    <Label x:Name="actionLabel" Content="Security Actions" Padding="3,0,10,3" FontSize="14" Foreground="White"/>
                    <StackPanel x:Name="horizontalStack" Orientation="Horizontal">
                        <Button x:Name="recoverBtn" Content="Change Password" Width="150" Height="30" Background="#FFF7BB64" BorderThickness="0,0,0,0" Foreground="Black" FontWeight="Bold" Margin="0,0,20,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
