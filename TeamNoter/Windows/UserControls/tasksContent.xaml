<UserControl x:Class="TeamNoter.Windows.UserControls.tasksContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeamNoter.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" VerticalContentAlignment="Top">
    <UserControl.Resources>

        <!--Item template-->
        <DataTemplate x:Key="TaskItem">
            <Border Background="#FFF7BB64" HorizontalAlignment="Left" Margin="5,5,5,5" Width="650" CornerRadius="7">
                <DockPanel Margin="10,10,10,10" LastChildFill="False">
                    <StackPanel Margin="5,0,10,0" DockPanel.Dock="Left">
                        <TextBlock Text="{Binding Deadline}" FontSize="14" Margin="0,0,0,0" />
                        <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" Margin="0,0,0,0"/>
                        <TextBlock Text="{Binding Details}" FontSize="13" Margin="0,0,0,0"/>
                        <TextBlock Text="{Binding Users}" FontSize="12" Margin="0,0,0,0" FontStyle="Italic"/>
                    </StackPanel>
                    <CheckBox IsChecked="{Binding IsCompleted}" DockPanel.Dock="Right" HorizontalAlignment="Right" BorderBrush="Black" VerticalAlignment="Center" Foreground="#FF777777" BorderThickness="2,2,2,2" Background="{x:Null}" Padding="0,0,0,0" Margin="0,0,20,0"/>
                </DockPanel>
            </Border>
        </DataTemplate>

        <Style TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>


    </UserControl.Resources>
    <ScrollViewer x:Name="mainScroller" HorizontalContentAlignment="Center" >
        <Grid x:Name="mainGrid" Background="#FF333131" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="mainStack" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Label x:Name="titleLabel" Content="Tasks" FontSize="24" Padding="2,0,0,0" Margin="20,15,0,0" Foreground="White" FontWeight="Bold" Background="{x:Null}" HorizontalContentAlignment="Center"/>
                <StackPanel x:Name="contentStack" Margin="25,10,0,0">
                    <StackPanel x:Name="filterStack" Orientation="Horizontal" Margin="0,10,0,10">
                        <CheckBox Style="{DynamicResource NoterCheckbox}" x:Name="filter1" Content="Show tasks due today" Foreground="White" Background="{x:Null}" BorderBrush="#FF777777" Margin="0,0,15,0" Checked="filter1_Checked"/>
                        <CheckBox Style="{DynamicResource NoterCheckbox}" x:Name="filter2" Content="Show tasks only assigned to you" Foreground="White" Background="{x:Null}" BorderBrush="#FF777777" Checked="filter2_Checked"/>
                    </StackPanel>
                    <TextBox x:Name="searchBox" TextWrapping="Wrap" Text="Search for tasks, users, deadlines..." VerticalContentAlignment="Center" Padding="10,0,0,0" Foreground="#FF777777" BorderBrush="#FF777777" Background="#FF333131" CaretBrush="White" Margin="0,0,0,11" Height="33" ToolTip="Searchs for tasks by default. If search starts with @, then it will search for users. If it starts with a number, then it will search for the date." GotFocus="searchBox_GotFocus" LostFocus="searchBox_LostFocus"/>
                    <ListBox x:Name="taskListbox" ItemTemplate="{DynamicResource TaskItem}" Background="#FF333131" ItemsSource="{Binding tasks}" ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderBrush="{x:Null}"/>
                </StackPanel>

            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
