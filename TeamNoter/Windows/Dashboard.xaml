<Window x:Class="TeamNoter.Dashboard"
        Style="{DynamicResource windowStyle}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamNoter"
        xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="Dashboard" Height="810" Width="1440" WindowStartupLocation="CenterScreen" MinWidth="960" MinHeight="540" WindowState="Maximized" Closed="Window_Closed" Icon="/Images/Icons/NoterIcon.ico">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel x:Name="sidebarDock" LastChildFill="False" Background="#FF252525">
            <StackPanel x:Name="sidebarStack" Height="371" DockPanel.Dock="Top">
                <Button x:Name="expandBtn" Style="{StaticResource sideBtn}" Click="expandBtn_Click" Width="40" Height="40" Margin="5,10,0,0" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" HorizontalAlignment="Left">
                    <Image x:Name="noterLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/Hamburger_MD.svg}" Stretch="Uniform" HorizontalAlignment="Left" Width="20" Height="20" Margin="9,0,0,0"/>
                </Button>
                <Button x:Name="accBtn" Style="{StaticResource sideBtn}" Width="40" Height="40" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" Margin="5,30,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Click="accBtn_Click" HorizontalAlignment="Left">
                    <DockPanel x:Name="accDock" LastChildFill="False" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image x:Name="accLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/User_01.svg}" Stretch="Uniform" Width="20" Height="20" Margin="9,0,0,0"/>
                        <Label x:Name="accLabel" Content="My Profile" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="11,5,5,5" Visibility="Hidden" Background="{x:Null}" Foreground="#FFDBDAD7" FontWeight="Bold"/>
                    </DockPanel>
                </Button>
                <Button x:Name="dbBtn" Style="{StaticResource sideBtn}" Width="40" Height="40" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Click="dbBtn_Click" Foreground="{x:Null}" Margin="5,10,0,0" HorizontalAlignment="Left">
                    <DockPanel x:Name="dbDock" LastChildFill="False" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Image x:Name="dbLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/Data.svg}" Stretch="Uniform" Width="20" Height="20" Margin="9,0,0,0"/>
                        <Label x:Name="dbLabel" Content="Database Information" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="11,5,5,5" Visibility="Hidden" Background="{x:Null}" Foreground="#FFDBDAD7" FontWeight="Bold"/>
                    </DockPanel>
                </Button>
                <Button x:Name="manageBtn" Style="{StaticResource sideBtn}" Width="40" Height="40" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Click="manageBtn_Click" Foreground="#FFFF2A2A" Margin="5,10,0,0" HorizontalAlignment="Left">
                    <DockPanel x:Name="manageDock" LastChildFill="False" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Image x:Name="manageLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/Users_Group.svg}" Stretch="Uniform" Width="20" Height="20" Margin="9,0,0,0"/>
                        <Label x:Name="manageLabel" Content="User Management" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="11,5,5,5" Visibility="Hidden" Background="{x:Null}" Foreground="#FFDBDAD7" FontWeight="Bold"/>
                    </DockPanel>
                </Button>
                <Button x:Name="taskBtn" Style="{StaticResource sideBtn}" Width="40" Height="40" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Click="taskBtn_Click" Foreground="#FFFF2A2A" Margin="5,10,0,0" HorizontalAlignment="Left">
                    <DockPanel x:Name="taskDock" LastChildFill="False" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Image x:Name="taskLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/List_Unordered.svg}" Stretch="Uniform" Width="20" Height="20" Margin="9,0,0,0"/>
                        <Label x:Name="taskLabel" Content="Tasks" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="11,5,5,5" Visibility="Hidden" Background="{x:Null}" Foreground="#FFDBDAD7" FontWeight="Bold"/>
                    </DockPanel>
                </Button>
            </StackPanel>
            <Button x:Name="logoutBtn" Style="{StaticResource sideBtn}" DockPanel.Dock="Bottom" Width="40" BorderBrush="{x:Null}" Background="{x:Null}" BorderThickness="0,0,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Click="taskBtn_Click" Foreground="#FFFF2A2A" Height="40" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5,0,0,10">
                <DockPanel x:Name="logoutDock" LastChildFill="False" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Image x:Name="logoutLogo" Source="{svgc:SvgImage AppName=TeamNoter, Source=/Images/UI_Icons/Log_Out.svg}" Stretch="Uniform" Width="20" Height="20" Margin="7,0,0,0"/>
                    <Label x:Name="logoutLabel" Content="Log Out" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="11,5,5,5" Visibility="Hidden" Background="{x:Null}" Foreground="#FFDBDAD7" FontWeight="Bold"/>
                </DockPanel>
            </Button>
        </DockPanel>
        <Border x:Name="contentBorder" BorderBrush="Black" Grid.Column="1" Background="#FF333131">
            <ContentControl x:Name="contentPane" Content="" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>
